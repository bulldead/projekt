            </Image>
        </Canvas>
        <Button x:Name="Exit" Content="Exit" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" Width="124" AutomationProperties.Name="Exit" Click="Exit_Click" Background="Black" Foreground="White" BorderBrush="Red" Height="34"/>
        <ProgressBar Margin="1275,814,21,27" Maximum="1000" LargeChange="10" BorderBrush="#FF01DCFF" Value="705" Foreground="#FF00F3FF" Background="#FFFD8989"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,710,0,0" VerticalAlignment="Top" Width="228" Height="132" Click="Button_Click"/>

